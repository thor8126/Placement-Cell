<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/v/bs5/jszip-2.5.0/dt-1.13.4/b-2.3.6/b-html5-2.3.6/b-print-2.3.6/r-2.4.1/datatables.min.js"></script>
<style>
  .dt-buttons {
    margin-bottom: 1rem;
  }
  
  #interviewTable {
    font-size: 16px;
  }
  
  #interviewTable thead th {
    background-color: #f0f0f0;
    font-weight: bold;
    text-transform: uppercase;
  }
  
  #interviewTable tbody td {
    vertical-align: middle;
  }
  
  #interviewTable tbody tr:nth-child(even) {
    background-color: #f9f9f9;
  }
  
  #interviewTable tbody tr:hover {
    background-color: #e0e0e0;
  }
  
  #interviewTable_wrapper .dataTables_paginate {
    margin-top: 1rem;
    font-size: 14px;
  }
  
  #interviewTable_wrapper .dataTables_info {
    font-size: 14px;
  }
  
  #interviewTable_wrapper .dataTables_length {
    font-size: 14px;
  }
  
  #interviewTable_wrapper .dataTables_filter {
    font-size: 14px;
  }
  
  #interviewTable_wrapper .btn-group button {
    font-size: 14px;
  }
  
  #interviewTable_wrapper .btn-group button:hover {
    background-color: #007bff;
  }
</style>

<div style="display: flex; align-items: center; justify-content: flex-end;">
  <a class="btn btn-outline-primary" href="/add_student">Add Students</a>
</div>
<br>
<div class="container">
  <table id="interviewTable" class="table table-success table-striped" style="width:100%">
    <thead>
      <tr>
        <th>Student ID</th>
        <th>Name</th>
        <th>College</th>
        <th>Status</th>
        <th>DSA Final Score</th>
        <th>WebD Final Score</th>
        <th>React Final Score</th>
        <th>Interview Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each students}}
        <tr>
          <td>{{this.studentId}}</td>
          <td>{{this.studentName}}</td>
          <td>{{this.studentCollege}}</td>
          <td>{{this.studentStatus}}</td>
          <td>{{this.dsaFinalScore}}</td>
          <td>{{this.webdFinalScore}}</td>
          <td>{{this.reactFinalScore}}</td>
          <td>{{this.interviewStudentResult}}</td>
          <td>
            <form action="/interviews/assign" method="POST">
              <input type="hidden" name="studentId" value="{{this.studentId}}">
              <button class="btn btn-primary">Assign Interview</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function() {
    $('#interviewTable').DataTable({
        dom: 'B<"clear">lfrtip',
        buttons: [ 'copy', 'csv', 'excel', 'pdf', 'print' ]
    });
  });


</script>
