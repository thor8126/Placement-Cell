<style>
  .dt-buttons {
    margin-bottom: 1rem;
  }
</style>


<div class="container">
  <table id="interviewsTable" class="table table-success table-striped" style="width:100%">
    <thead>
      <tr>
        <th>Interview Date</th>
        <th>Company</th>
        {{!-- <th>Students</th> --}}
      </tr>
    </thead>
    <tbody>
      {{#each interviews}}
        <tr>
          <td>{{this.date}}</td>
          <td>{{this.company}}</td>
          {{!-- <td>
            <ul>
              {{#each this.students}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          </td> --}}
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function() {
    $('#interviewsTable').DataTable({
        dom: 'B<"clear">lfrtip',
        buttons: [ 'copy', 'csv', 'excel', 'pdf', 'print' ]
    });
  });
</script>
