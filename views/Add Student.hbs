
<div>
    <div class="container addbox"
        style="background-color: white; padding: 20px; border-radius: 10px; box-shadow: 0px 0px 8px 0px #888888;">
        <form action="/student/add-student" method="POST">
            <center><h1>Add Student</h1></center>
            <div class="margin-bottom">
                <div class="row">
                    
                    <div class="col-12" style="width: 100%;"> 
                        <div class="box">
                            <input type="text" id="studentName" class="input-animated" placeholder=" " />
                            <label for="studentName" class="input-label">Name</label>
                        </div>
                    </div>
                </div>
            </div>

             <div class="margin-bottom">
                <div class="row">
                    <div class="col-6">
                        <div class="box">
                            <input type="text" id="studentCollege" class="input-animated" placeholder=" " />
                            <label for="studentCollege" class="input-label">Current College</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="box">
                            <input type="text" id="studentStatus" class="input-animated" placeholder=" " />
                            <label for="studentStatus" class="input-label">Status</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="margin-bottom">
                <div class="row">
                    <div class="col-6">
                        <div class="box">
                            <input type="text" id="dsaFinalScore" class="input-animated" placeholder=" " />
                            <label for="dsaFinalScore" class="input-label">DSA Final Score</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="box">
                            <input type="text" id="webdFinalScore" class="input-animated" placeholder=" " />
                            <label for="webdFinalScore" class="input-label">WebD Final Score</label>
                        </div>
                    </div>
                </div>
            </div>
           
           <div class="margin-bottom">
                <div class="row">
                    <div class="col-6">
                        <div class="box">
                            <input type="text" id="reactFinalScore" class="input-animated" placeholder=" " />
                            <label for="reactFinalScore" class="input-label">React Final Score</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="box">
                            <input type="date" id="interviewDate" class="input-animated" placeholder=" " />
                            <label for="interviewDate" class="input-label">Interview Date</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="margin-bottom">
                <div class="row">
                    <div class="col-6">
                        <div class="box">
                            <input type="text" id="interviewCompany" class="input-animated" placeholder=" " />
                            <label for="interviewCompany" class="input-label">Interview Company</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="box">
                            <input type="text" id="interviewStudentResult" class="input-animated" placeholder=" " />
                            <label for="interviewStudentResult" class="input-label">Interview Result</label>
                        </div>
                    </div>
                </div>
            </div>

            <center>
                <button type="submit" class="btn btn-primary">Submit</button>
            </center>
        </form>
    </div>
</div>